<mapping>
    <class name="ru.mitenev.vo.Users">
            <field name="users" type="ru.mitenev.domain.User" collection="arraylist">
                <bind-xml name="user"/>
            </field>
    </class>

    <class name="ru.mitenev.domain.User" identity="id">
        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>
        <field name="firstName" type="string">
            <bind-xml name="firstName" node="element" />
        </field>
        <field name="lastName" type="string">
            <bind-xml name="lastName" node="element" />
        </field>
        <field name="email" type="string">
            <bind-xml name="element" node="element" />
        </field>
        <field name="registrationDate" type="dateHandler">
            <bind-xml name="registrationDate" node="element"/>
        </field>
    </class>
    <field-handler name="dateHandler" class="ru.mitenev.xml.handler.DateTimeFieldHandler">
        <param name="date-format" value="yyyy-MM-dd"/>
    </field-handler>
</mapping>